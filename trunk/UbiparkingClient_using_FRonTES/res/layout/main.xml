<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="5dip">


    <Button android:id="@+id/buttonStartParkingTask"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Tarefa - Estacionar"
        android:layout_alignParentTop="true"
         />
    
    
    <TextView
        android:id="@+id/textLog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log:" 
        android:layout_below="@id/buttonStartParkingTask"
        />
	<Button
        android:id="@+id/ButtonFinishParking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Estacionamento" 
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />
    
	<Button
        android:id="@+id/ButtonConfirmVaga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Vaga" 
        android:layout_above="@id/ButtonFinishParking"
        android:visibility="gone"
        />

    
    <Button
        android:id="@+id/buttonRequestVaga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Requisitar Vaga" 
        android:layout_above="@id/ButtonConfirmVaga"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/editTextLog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minLines="2"
        android:layout_above="@id/buttonRequestVaga"
        android:layout_below="@id/textLog" />
    
    
    
    
    
</RelativeLayout>